<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@color/protectiveBackground"
    android:id="@+id/loadOnDemandLinearLayout">
    <TextView
        android:text="Non Scheduled Pacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/nonScheduledPacingTextView" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nonScheduledPacingLinearLayout">
     <EditText
            android:id="@+id/nonScheduledPacingEditText"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:hint="Amount"
            android:inputType="number"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
        />
        <Button
            android:text="Load"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:height="30dp"
            android:id="@+id/nonScheduledPacingButton" />
    </LinearLayout>
    <TextView
        android:text="Load Automated Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/loadAutomatedContactsTextView" />

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" >
        <EditText
            android:id="@+id/loadAutomatedContactsEditText"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:hint="Amount"
            android:inputType="number"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
        />
        <Button
            android:text="Load"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:height="30dp"
            android:id="@+id/loadAutomatedContactsButton" />
     </LinearLayout>

</LinearLayout>
